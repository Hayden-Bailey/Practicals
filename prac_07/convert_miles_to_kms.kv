BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_value
            font_size: 32
            multiline: False
            text: ''
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculation()
    Label:
        id: output_value
        font_size: 32
        color: (0, 1, 1, 1)
        text: app.kilometers