BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: .2
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            text: ''
            id: input_label
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: .2
            text: 'Greet '
            on_press: app.handle_greet()
        Label:
            text: 'Enter your name'
            id: output_label
            color: (1, 1, 0, 1)
